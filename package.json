{
  "name": "my-extension",
  "displayName": "My Extension",
  "description": "A simple VSCode extension with a scrollable 2D canvas.",
  "version": "0.0.1",
  "publisher": "your-name",
  "engines": {
    "vscode": "^1.92.0"
  },
  "activationEvents": [
    "onCommand:extension.openCanvas",
    "onView:canvasExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.openCanvas",
        "title": "Open Canvas"
      }
    ],
    "views": {
      "canvas-explorer": [
        {
          "id": "canvasExplorer",
          "name": "Canvas Explorer"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "canvas-explorer",
          "title": "Canvas Explorer",
          "icon": "icon.png"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint .",
    "prepublish": "npm run build"
  },
  "devDependencies": {
    "@types/node": "^22.4.1",
    "@types/vscode": "^1.92.0",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "axios": "^1.7.7"
  }
}
