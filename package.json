{
    "name": "my-extension",
    "displayName": "My Extension",
    "description": "A simple VSCode extension with a scrollable 2D canvas.",
    "version": "0.0.1",
    "publisher": "your-name",
    "engines": {
      "vscode": "^1.92.0"
    },
    "categories": ["Other"],
    "activationEvents": [
      "onCommand:extension.openCanvasPage"
    ],
    "main": "./out/extension.js",
    "contributes": {
      "commands": [
        {
          "command": "extension.openCanvasPage",
          "title": "Open Canvas Page"
        }
      ],
      "viewsContainers": {
        "activitybar": [
          {
            "id": "canvas-explorer",
            "title": "Canvas Explorer",
            "icon": "images/icon.png"
          }
        ]
      },
      "views": {
        "canvas-explorer": [
          {
            "id": "canvasExplorer",
            "name": "Canvas Explorer"
          }
        ]
      }
    },
    "assets": {
        "media": [
            "media/styles.css",
            "media/highlight.min.js",
            "media/default.min.css"
        ]
    },
    "scripts": {
      "vscode:prepublish": "npm run compile",
      "compile": "tsc -p ./",
      "watch": "tsc -watch -p ./",
      "pretest": "npm run compile && npm run lint",
      "lint": "eslint src --ext ts",
      "test": "node ./out/test/runTest.js",
      "build": "npm run compile"
    },
    "devDependencies": {
      "@types/vscode": "^1.92.0",
      "@types/node": "^22.4.1",
      "@typescript-eslint/eslint-plugin": "^5.59.1",
      "@typescript-eslint/parser": "^5.59.1",
      "eslint": "^8.39.0",
      "typescript": "^5.0.4"
    }
}