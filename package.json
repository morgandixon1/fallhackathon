{
    "name": "my-extension",
    "displayName": "My Extension",
    "description": "A simple VSCode extension with a scrollable 2D canvas.",
    "version": "0.0.1",
    "publisher": "your-name",
    "engines": {
      "vscode": "^1.92.0"
    },
    "activationEvents": [
      "onStartupFinished",
      "workspaceContains:**/*.{js,ts,html,css}"
    ],
    "main": "./out/extension.js",
    "contributes": {
      "commands": [
        {
          "command": "extension.openCanvas",
          "title": "Open Canvas"
        }
      ]
    },
    "scripts": {
      "build": "tsc",
      "watch": "tsc --watch",
      "lint": "eslint .",
      "prepublish": "npm run build"
    },
    "devDependencies": {
      "typescript": "^5.5.4",
      "@types/node": "^22.4.1",
      "@types/vscode": "^1.92.0"
    }
  }
  